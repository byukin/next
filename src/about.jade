	body
		.plan
		.plan2
		.layout
			section.header
				.holder
					.header-logo
					.header-anchors
						ul
							li
								a(href="#") Продвижение<br>сайтов под ключ
							li
								a(href="#") Классическое<br>продвижение сайтов
							li
								a(href="#") Разработка<br>сайтов
					.header-geo
						.header-geo__cities
							ul
								li.header-geo__city Москва
								li.header-geo__city.active Казань
								li.header-geo__city Россия
						.header-geo__phone <span>+7 (843)</span> 555 05 05
					.header-contact
						.header-modals
							.header-modals__search <i class="fa fa-search" aria-hidden="true"></i>
							.header-modals__menu
						.header-contact__item
							a(href="").header-contact__link_call-me Перезвоните мне
						.header-contact__item
							a(href="").header-contact__link Контакты

			section.about
				.holder
					.about-block.clearfix
						h1 Контакты
						.about-block-left Казань, Островского, 87
							ul
								li.about-block-phone <span>8 (843)</span> 217 55 29 <i>Казань</i>
								li.about-block-phone <span>8 (495)</span> 525 11 48 <i>Москва</i>
								li.about-block-phone <span>8 (800)</span> 102 20 83 <i>Россия</i>
							.about-block-time
								span 10:00
								span 19:00
						.about-block-right
							form(action="").about-block-form
								h2.about-block-form__title Написать нам
								input(type="text" placeholder="Имя").about-block-form__input
								input(type="text" placeholder="Телефон").about-block-form__input
								input(type="text" placeholder="Электронный адрес").about-block-form__input
								input(type="text" placeholder="Ссылка на сайт").about-block-form__input
								textarea(placeholder="Сообщение").about-block-form__textarea
								.about-block-form__submit
									button.about-block-form__button Отправить

			section.footer
				.holder.clearfix
					.footer-block
						.footer-social
							ul
								li.footer-social__item
									a(href="").footer-social__link <i class="fa fa-vk" aria-hidden="true"></i>
								li.footer-social__item
									a(href="").footer-social__link <i class="fa fa-twitter" aria-hidden="true"></i>
								li.footer-social__item
									a(href="").footer-social__link <i class="fa fa-facebook" aria-hidden="true"></i>
								li.footer-social__item
									a(href="").footer-social__link <i class="fa fa-instagram" aria-hidden="true"></i>
